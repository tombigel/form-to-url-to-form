{
  "name": "form-to-url-to-form",
  "version": "1.1.14",
  "description": "Save and load form state to and from the URL",
  "type": "module",
  "main": "dist/cjs/index.js",
  "module": "dist/es/index.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/es/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "directories": {
    "example": "examples"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:lib": "vite build --config vite.lib.config.ts",
    "build:types": "tsc -p tsconfig.types.json",
    "clean": "rimraf dist build",
    "preview": "vite preview",
    "demo": "vite examples/demo --open",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build",
    "update-version": "node scripts/update-version.js",
    "version:patch": "npm version patch && npm run update-version",
    "version:minor": "npm version minor && npm run update-version",
    "version:major": "npm version major && npm run update-version",
    "prepublishOnly": "npm run clean && npm run build:lib && npm run build:types",
    "publish-and-deploy": "npm run version:patch && git push --follow-tags origin main && npm publish && npm run deploy"
  },
  "keywords": [
    "form",
    "url",
    "state",
    "serialization",
    "history-api",
    "browser"
  ],
  "author": {
    "name": "Tom Bigelajzen",
    "url": "https://github.com/tombigel"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tombigel/form-to-url-to-form.git"
  },
  "bugs": {
    "url": "https://github.com/tombigel/form-to-url-to-form/issues"
  },
  "homepage": "https://tombigel.github.io/form-to-url-to-form/",
  "devDependencies": {
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^22.14.1",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@typescript-eslint/eslint-plugin": "^8.30.1",
    "@typescript-eslint/parser": "^8.30.1",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^9.25.0",
    "gh-pages": "^6.3.0",
    "jsdom": "^26.1.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.8.3",
    "vite": "^6.3.2",
    "vite-plugin-dts": "^4.5.3",
    "vitest": "^3.1.2"
  }
}
